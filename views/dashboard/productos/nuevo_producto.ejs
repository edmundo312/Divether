<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../../template/head", {tittle: "Divether 6", base_url:base_url})  %>  
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>  
</head>
<body>
  <div class="contenedor">
      <%- include("../../template/navbar")  %>
      <div id="desceleccionar" class="main" style="padding-top: 8rem">

        <h1 class="">Productos</h1>

        <div class="row">
            <div class="col">
                <form action="" id="form"> 
                    <div class="row mb-3">
                        <div class="col-12 col-md-6">
                            <label for="producto_nombre" class="form-label">Nombre del producto</label>
                            <input type="text" class="form-control" id="producto_nombre" name="producto_nombre">
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="producto_uso" class="form-label">Uso</label>
                            <input type="text" class="form-control" id="producto_uso" name="producto_uso">
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="producto_descripcion" class="form-label">Descripcion</label>
                            <input type="text" class="form-control" id="producto_descripcion" name="producto_descripcion">
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="producto_precio" class="form-label">Precio</label>
                            <input type="number" class="form-control" id="producto_precio" name="producto_precio">
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="producto_laboratorio_id" class="form-label">Laboratorio</label>
                            <select class="form-select" id="producto_laboratorio_id" name="producto_laboratorio_id" aria-label="Default select example">
                                <option selected value="" disabled>Selecciona una laboratorio</option>
                                    <% laboratorios.forEach(laboratorio => { %>
                                        <option value="<%= laboratorio.dataValues.laboratorio_id %>"><%= laboratorio.dataValues.laboratorio_nombre %></option> 
                                    <% }); %>
                              </select>
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="laboratorio_imagen" class="form-label">Imagen</label>
                            <input class="form-control nombre_imagen" type="file" id="archivo" name="archivo" multiple>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <button id="enviar_btn" type="button" class="btn btn-success">Enviar</butto>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        
      </div>
    </div>
    <div id="base_url" base_url="<%= base_url%>"></div>
    <script 
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" 
        crossorigin="anonymous"
    ></script>
    <%- `<script src="${base_url}js/index.js"></script>`  %>
    <%- `<script src="${base_url}js/app.js"></script>`  %>   
    <%- `<script src="${base_url}js/template.js"></script>`  %>   
    <%- `<script src="${base_url}js/productos/nuevo_producto.js"></script>` %> 
    
</body>
</html>